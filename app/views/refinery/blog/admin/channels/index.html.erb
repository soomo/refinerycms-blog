<%= render :partial => '/refinery/blog/admin/submenu' %>
<div id='records'>
  <% if searching? %>
    <h2><%= t('results_for', :scope => 'refinery.admin.search',
                             :query => params[:search]) %></h2>
    <% if @channels.any? %>
      <%= render :partial => "blog_channels",
                 :collection => @channels %>
    <% else %>
      <p><%= t('no_results', :scope => 'refinery.admin.search') %></p>
    <% end %>
  <% else %>
    <% if @channels.any? %>
      <%= will_paginate @channels %>

      <%= render :partial => "sortable_list" %>

      <%= will_paginate @channels %>
    <% else %>
      <p>
        <strong>
          <%= t('.no_items_yet', :create => "New Channel") %>
        </strong>
      </p>
    <% end %>
  <% end %>
</div>
